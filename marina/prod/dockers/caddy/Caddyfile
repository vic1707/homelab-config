{
    # debug # this is optional - makes Caddy log more details
    acme_ca https://acme.zerossl.com/v2/DV90
    email   {$ZEROSSL_EMAIL}

    # enables prometheus metrics
    servers {
        metrics
    }

    # set admin port
    admin :2019
}

{$DOMAIN} {
    root * /usr/share/caddy
    file_server
}

jellyfin.{$DOMAIN} {
    encode gzip
    reverse_proxy jellyfin:8096
}

transmission.{$DOMAIN} {
    reverse_proxy transmission:9091
}
