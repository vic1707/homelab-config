{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "schedule": ["0 4 * * 1"],
    "packageRules": [
        {
            "matchManagers": ["docker-compose"],
            "groupName": "Docker Compose Updates"
        },
        {
            "matchManagers": ["github-actions"],
            "groupName": "GitHub Actions Updates"
        }
    ]
}
